<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verify_phone"
    android:background="@drawable/otp_back">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:id="@+id/a111"

        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/verifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:fontFamily="@font/arial"

            android:text="Verification"
            android:textSize="40sp"
            android:textColor="@color/Black"
            />


        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/verifi"

            android:layout_gravity="center"


            android:text="We send a 6 digits verification code to Your phone Number"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:fontFamily="@font/arial"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/enteropt"
            android:digits="0123456789"

            android:hint="Enter code"
            android:textColorHint="@color/Black"
            android:fontFamily="@font/arial"
            android:inputType="phone"
            android:maxLength="6"
            android:paddingStart="50dp"

            android:textSize="24sp" />


        <Button
            android:id="@+id/buttonSignIn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/otpsignin" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/a111"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ProgressBar
            android:id="@+id/progressbar"
            style="@style/Animation.Design.BottomSheetDialog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"



            android:visibility="gone" />


    </LinearLayout>


    <ImageView

        android:id="@+id/love"
        android:layout_width="wrap_content"
        android:layout_height="52dp"


        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/googlesecure" />

</RelativeLayout>

