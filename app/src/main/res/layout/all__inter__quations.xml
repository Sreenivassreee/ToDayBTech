<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <!--android:clipToPadding="true"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center_vertical"

            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".All_Inter_Quations">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@color/sree"
                android:minHeight="55dp"
                app:titleTextColor="@color/white"
                app:subtitleTextColor="@color/white">

            </androidx.appcompat.widget.Toolbar>


            <!--<Space-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="10dp" />-->


            <!--app:layout_constraintBottom_toTopOf="@+id/priviousbtn"-->
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--app:layout_constraintHorizontal_bias="0.341"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent"-->
            <!--app:layout_constraintVertical_bias="0.479" />-->

            <Button

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"


                android:background="@drawable/where"


                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/arial"



                android:textAlignment="center"

                android:textColor="@color/Red"
                android:textSize="17sp"

                android:text="@string/top_100_interview_questions"/>



            <Button
                android:id="@+id/java_questions"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"

                android:layout_marginRight="14dp"
                android:background="#930EA8"
                android:fontFamily="@font/arial"
                android:text="@string/java"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <Button
                android:id="@+id/c_questions"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="14dp"

                android:background="#0A3881"
                android:fontFamily="@font/arial"
                android:text="@string/c"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="17sp"

                />

            <!--app:layout_constraintBottom_toBottomOf="parent"-->
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--app:layout_constraintHorizontal_bias="0.509"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent"-->
            <!--app:layout_constraintVertical_bias="0.201" />-->

            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--app:layout_constraintHorizontal_bias="0.509"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/priviousbtn" />-->


            <Button
                android:id="@+id/python_questions"
                android:layout_width="match_parent"
                android:textAllCaps="true"
                android:text="@string/python"
                android:layout_height="80dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="7dp"
                android:textAlignment="center"
                android:textSize="17sp"
                android:fontFamily="@font/arial"
                android:textColor="@color/white"



                android:background="#BC390E"/>

            <Button
                android:id="@+id/DataStructure_questions"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="14dp"
                android:background="#6D008B"
                android:fontFamily="@font/arial"
                android:text="Data Structures"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <Button
                android:id="@+id/android_app_questions"
                android:layout_width="match_parent"
                android:textAllCaps="true"
                android:text="@string/android_application_development"
                android:layout_height="80dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="7dp"
                android:textAlignment="center"
                android:textSize="17sp"
                android:fontFamily="@font/arial"
                android:textColor="@color/white"



                android:background="#0074BB"/>

            <Button
                android:id="@+id/Linux_questions"
                android:layout_width="match_parent"
                android:textAllCaps="true"
                android:text="@string/linux"
                android:layout_height="80dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="7dp"
                android:textAlignment="center"
                android:textSize="17sp"
                android:fontFamily="@font/arial"
                android:textColor="@color/white"
                android:background="#C56300"/>



            <Space
                android:layout_width="wrap_content"
                android:layout_height="50dp" />




        </LinearLayout>
    </TableLayout>
    </ScrollView>

</ScrollView>




